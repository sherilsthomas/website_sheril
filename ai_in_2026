    <!-- JavaScript Logic -->
    <script>
        // Data Store
        const semesters = [
            {
                id: 1,
                title: "Sem 1: The Foundation & Prompt Literacy",
                theme: "Logic over Syntax",
                description: "Students learn standard programming logic (Python/JS) but concurrently learn 'Prompt Engineering' as a primary language.",
                modules: [
                    "Intro to Computational Thinking (w/ AI Tutors)",
                    "Git & GitHub Fundamentals (Commit hygiene)",
                    "Prompt Engineering 101: Context, Constraints, Examples",
                    "Basic Python via Jupyter & Colab AI"
                ],
                tools: "ChatGPT Plus, GitHub Codespaces",
                project: "Build a CLI Tool that uses an API, documented entirely by AI.",
                outcome: "Can read code and formulate logic. Can prompt an LLM to generate basic snippets."
            },
            {
                id: 2,
                title: "Sem 2: Frontend & Generative UI",
                theme: "Rapid Prototyping",
                description: "Moving away from writing CSS from scratch. Focus on component logic and using AI to generate layouts.",
                modules: [
                    "React/Next.js Core Concepts",
                    "Generative UI Tools (V0.dev)",
                    "Tailwind CSS (Understanding utility classes)",
                    "Debugging AI-generated UI code"
                ],
                tools: "V0.dev, Repl.it, Cursor (Basic)",
                project: "Personal Portfolio Website generated via V0, deployed on Vercel.",
                outcome: "Ability to visualize a design and use AI to render the code instantly."
            },
            {
                id: 3,
                title: "Sem 3: The AI Pair Programmer",
                theme: "Cursor-First Development",
                description: "Students switch to Cursor as their primary IDE. The focus is on 'Tab-Autocomplete' flow and Codebase indexing.",
                modules: [
                    "Advanced Cursor Features (Composer, Chat)",
                    "Database Design (SQL/NoSQL) with AI assistance",
                    "API Development (FastAPI/Express)",
                    "Code Review: finding hallucinations in AI code"
                ],
                tools: "Cursor Pro, Postman (AI features), Supabase",
                project: "Full Stack CRUD App (e.g., Task Manager) built in under 12 hours.",
                outcome: "10x coding speed on standard features. Proficiency in reading AI diffs."
            },
            {
                id: 4,
                title: "Sem 4: RAG & AI Integration",
                theme: "Building WITH AI",
                description: "Not just using AI to code, but building apps that USE AI (LLM integration).",
                modules: [
                    "Intro to LLMs & Embeddings",
                    "Building RAG (Retrieval Augmented Generation) pipelines",
                    "Vector Databases (Pinecone/Weaviate)",
                    "LangChain / Vercel AI SDK"
                ],
                tools: "OpenAI API, LangChain, Pinecone",
                project: "University Chatbot: A RAG app trained on the college syllabus PDF.",
                outcome: "Understanding how to build the 'brains' of a modern application."
            },
            {
                id: 5,
                title: "Sem 5: Agentic Workflows",
                theme: "Orchestration",
                description: "Managing multi-agent systems. Using Claude-Cowork to simulate team environments.",
                modules: [
                    "Agent Architecture (Planner, Executor, Reviewer)",
                    "Claude-Cowork & Collaborative AI",
                    "Testing & Eval (How to test non-deterministic code)",
                    "AI Ethics & Bias"
                ],
                tools: "Claude 3.5 Sonnet, AutoGPT principles, Devin (simulations)",
                project: "Autonomous Research Agent: An app that scrapes web, summarizes, and writes a report.",
                outcome: "Ability to design systems where AI takes actions, not just generates text."
            },
            {
                id: 6,
                title: "Sem 6: Enterprise Readiness & Architecture",
                theme: "System Design",
                description: "Final preparation for the market. Large scale systems, CI/CD with AI, and legacy code refactoring.",
                modules: [
                    "Refactoring Legacy Code with AI",
                    "Cloud Architecture (AWS/Azure) generated via IaC",
                    "DevOps & AI (GitHub Actions + Copilot)",
                    "Capstone Project Delivery"
                ],
                tools: "Terraform (AI gen), Docker, Kubernetes",
                project: "Industry Capstone: Modernizing an open-source legacy project using AI tools.",
                outcome: "Campus Ready. Can enter a company and immediately contribute to architecture and code."
            }
        ];

        // State
        let currentSem = 1;

        // Helper Functions
        const getElement = (id) => document.getElementById(id);

        // Render Functions
        function renderTabs() {
            const tabsContainer = getElement('semTabs');
            tabsContainer.innerHTML = semesters.map(sem => `
                <button 
                    onclick="updateSem(${sem.id})"
                    class="flex-shrink-0 px-6 py-4 text-sm font-bold uppercase tracking-wider transition-all border-b-2 
                    ${currentSem === sem.id ? 'border-orange-600 text-orange-600 bg-orange-50' : 'border-transparent text-slate-500 hover:text-slate-700 hover:bg-slate-50'}">
                    Sem ${sem.id}
                </button>
            `).join('');
        }

        function renderContent() {
            const contentContainer = getElement('semContent');
            const data = semesters.find(s => s.id === currentSem);
            
            // Animation reset
            contentContainer.classList.remove('fade-in');
            void contentContainer.offsetWidth; // trigger reflow
            contentContainer.classList.add('fade-in');

            contentContainer.innerHTML = `
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <div class="lg:col-span-2 space-y-6">
                        <div>
                            <span class="text-orange-600 font-bold tracking-wide text-sm uppercase">${data.theme}</span>
                            <h3 class="text-3xl font-bold text-slate-900 mt-1">${data.title}</h3>
                            <p class="text-slate-600 mt-4 text-lg leading-relaxed">${data.description}</p>
                        </div>
                        
                        <div class="bg-slate-50 p-6 rounded-xl border border-slate-200">
                            <h4 class="font-bold text-slate-900 mb-4 flex items-center">
                                <span class="bg-slate-900 text-white w-6 h-6 rounded-full flex items-center justify-center text-xs mr-2">1</span>
                                Core Modules
                            </h4>
                            <ul class="grid grid-cols-1 md:grid-cols-2 gap-3">
                                ${data.modules.map(m => `<li class="flex items-start text-sm text-slate-700"><span class="mr-2 text-orange-500">‚û§</span>${m}</li>`).join('')}
                            </ul>
                        </div>
                    </div>

                    <div class="space-y-6">
                        <div class="bg-blue-50 p-5 rounded-xl border border-blue-100">
                            <h4 class="font-bold text-blue-900 text-sm uppercase mb-2">Tool Stack Focus</h4>
                            <p class="text-blue-800 font-medium">${data.tools}</p>
                        </div>

                        <div class="bg-white p-5 rounded-xl border border-slate-200 shadow-sm">
                            <h4 class="font-bold text-slate-900 text-sm uppercase mb-2">Capstone Project</h4>
                            <p class="text-slate-600 text-sm mb-3">${data.project}</p>
                            <div class="border-t border-slate-100 pt-3">
                                <h5 class="text-xs font-bold text-slate-400 uppercase">Outcome</h5>
                                <p class="text-slate-800 font-medium text-sm">${data.outcome}</p>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }

        function updateSem(id) {
            currentSem = id;
            renderTabs();
            renderContent();
        }

        // Charts
        function initCharts() {
            // Chart 1: Market Demand
            const ctxMarket = getElement('marketChart').getContext('2d');
            new Chart(ctxMarket, {
                type: 'line',
                data: {
                    labels: ['2023', '2024', '2025', '2026 (Projected)', '2027'],
                    datasets: [
                        {
                            label: 'Traditional Coding Roles',
                            data: [80, 65, 45, 30, 20],
                            borderColor: '#94a3b8', // Slate 400
                            borderWidth: 2,
                            tension: 0.4,
                            pointRadius: 0
                        },
                        {
                            label: 'AI-Augmented Roles',
                            data: [20, 35, 55, 70, 80],
                            borderColor: '#ea580c', // Orange 600
                            backgroundColor: 'rgba(234, 88, 12, 0.1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' },
                        tooltip: { mode: 'index', intersect: false }
                    },
                    scales: {
                        y: { beginAtZero: true, display: false },
                        x: { grid: { display: false } }
                    }
                }
            });

            // Chart 2: Skills Radar
            const ctxSkills = getElement('skillsChart').getContext('2d');
            new Chart(ctxSkills, {
                type: 'radar',
                data: {
                    labels: ['Syntax Memory', 'System Design', 'Debugging', 'AI Prompting', 'Review/Audit', 'Problem Solving'],
                    datasets: [{
                        label: 'Traditional Student',
                        data: [90, 30, 50, 10, 20, 60],
                        fill: true,
                        backgroundColor: 'rgba(148, 163, 184, 0.2)',
                        borderColor: '#94a3b8',
                        pointBackgroundColor: '#94a3b8',
                    }, {
                        label: '2026 Campus Ready',
                        data: [20, 85, 90, 95, 90, 90],
                        fill: true,
                        backgroundColor: 'rgba(234, 88, 12, 0.2)',
                        borderColor: '#ea580c',
                        pointBackgroundColor: '#ea580c',
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: { color: '#e2e8f0' },
                            grid: { color: '#e2e8f0' },
                            pointLabels: { font: { size: 11, weight: 'bold' } },
                            suggestedMin: 0,
                            suggestedMax: 100
                        }
                    },
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
        }

        function scrollToSection(id) {
            getElement(id).scrollIntoView({ behavior: 'smooth' });
        }

        // Init
        document.addEventListener('DOMContentLoaded', () => {
            renderTabs();
            renderContent();
            initCharts();
        });

    </script>
    <!-- CONFIRMATION: NO SVG graphics used. NO Mermaid JS used. -->
</body>
</html>
